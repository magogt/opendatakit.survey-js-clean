{
    "settings": [
        {
            "setting": "formId", 
            "value": "imnci"
        }, 
        {
            "setting": "formVersion", 
            "value": 1
        }, 
        {
            "setting": "formLocale", 
            "value": "en_us"
        }, 
        {
            "setting": "formName", 
            "value": "IMNCI"
        }
    ], 
    "survey": [
        {
            "type": "text", 
            "name": "name", 
            "param": null, 
            "label": {
                "en_us": "Name"
            }
        }, 
        {
            "type": "integer", 
            "name": "age", 
            "param": null, 
            "label": {
                "en_us": "Age"
            }
        }, 
        {
            "type": "integer", 
            "name": "temperature", 
            "param": null, 
            "label": {
                "en_us": "Temperature"
            }
        }, 
        {
            "prompts": [
                {
                    "type": "note", 
                    "param": null, 
                    "label": {
                        "en_us": "ASK:"
                    }
                }, 
                {
                    "type": "select_one", 
                    "name": "able_to_drink", 
                    "param": "yes_no", 
                    "label": {
                        "en_us": "Is the child able to drink or breastfeed?"
                    }
                }, 
                {
                    "type": "select_one", 
                    "name": "vomit_everything", 
                    "param": "yes_no", 
                    "label": {
                        "en_us": "Does the child vomit everything?"
                    }
                }, 
                {
                    "type": "select_one", 
                    "name": "convulsions", 
                    "param": "yes_no", 
                    "label": {
                        "en_us": "Has the child had convulsions?"
                    }
                }
            ], 
            "type": "screen"
        }, 
        {
            "type": "select_one", 
            "name": "lethargic", 
            "param": "yes_no", 
            "label": {
                "en_us": "LOOK: See if the child is lethargic or unconscious."
            }
        }, 
        {
            "prompts": [
                {
                    "label": {
                        "en_us": "<strong>DANGER SIGNS:</strong>{{#selected lethargic.value \"yes\"}}lethargic{{/selected}}"
                    }, 
                    "type": "note", 
                    "param": null, 
                    "hint": "{{#selected lethargic.value \"yes\"}}lethargic{{/selected}}"
                }, 
                {
                    "type": "note", 
                    "param": null, 
                    "condition": "selected({{able_to_drink}}, 'no')", 
                    "label": {
                        "en_us": "<li>Not able to drink or breastfeed</li>"
                    }
                }, 
                {
                    "type": "note", 
                    "param": null, 
                    "condition": "selected({{vomit_everything}}, 'yes')", 
                    "label": {
                        "en_us": "Vomits everything"
                    }
                }, 
                {
                    "type": "note", 
                    "param": null, 
                    "condition": "selected({{convulsions}}, 'yes')", 
                    "label": {
                        "en_us": "Convulsions"
                    }
                }, 
                {
                    "type": "note", 
                    "param": null, 
                    "condition": "selected({{lethargic}}, 'yes')", 
                    "label": {
                        "en_us": "Lethargic or unconscious"
                    }
                }, 
                {
                    "type": "acknowledge", 
                    "name": "acknowledged_urgent_attention", 
                    "param": null, 
                    "label": {
                        "en_us": "This child needs <strong>URGENT</strong> attention; complete the assessment and any pre-referral treatment immediately so referral is not delayed"
                    }
                }
            ], 
            "type": "screen", 
            "condition": "selected({{able_to_drink}}, 'no') || selected({{vomit_everything}}, 'yes') ||  selected({{convulsions}}, 'yes') || selected({{lethargic}}, 'yes')", 
            "comments": "Maybe have a begin condition_group construct where the group appears if any prompt inside it has a true condition."
        }, 
        {
            "type": "select_one", 
            "name": "difficulty_breathing", 
            "param": "yes_no", 
            "label": {
                "en_us": "Does the child have difficulty breathing?"
            }
        }, 
        {
            "type": "goto_if", 
            "param": "breath", 
            "condition": "selected({{difficulty_breathing}}, 'yes')"
        }, 
        {
            "type": "select_one", 
            "name": "diarrhoea", 
            "param": "yes_no", 
            "label": {
                "en_us": "Does the child have diarrhoea?"
            }
        }, 
        {
            "type": "goto_if", 
            "param": "diarrhoea_sec", 
            "condition": "selected({{diarrhoea}}, 'yes')"
        }, 
        {
            "type": "select_one", 
            "name": "fever", 
            "param": "yes_no", 
            "label": {
                "en_us": "Does the child have fever?"
            }
        }, 
        {
            "type": "goto_if", 
            "param": "fever_sec", 
            "condition": "selected({{fever}}, 'yes')"
        }, 
        {
            "type": "label", 
            "param": "diarrhoea_sec"
        }, 
        {
            "type": "integer", 
            "name": "how_long_difficulty_breathing", 
            "param": null, 
            "label": {
                "en_us": "For how long?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "blood_in_stool", 
            "param": "yes_no", 
            "label": {
                "en_us": "Is there blood in the stool?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "lethargic", 
            "param": "yes_no", 
            "label": {
                "en_us": "Is the child lethargic or unconscious?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "restless", 
            "param": "yes_no", 
            "label": {
                "en_us": "Restless and irritable?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "drink", 
            "param": "yes_no", 
            "label": {
                "en_us": "Is the child able to drink or drink poorly?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "drink_eager", 
            "param": "yes_no", 
            "label": {
                "en_us": "Is the child drinking eagerly?"
            }
        }, 
        {
            "type": "select_one", 
            "name": "drink_thristy", 
            "param": "yes_no", 
            "label": {
                "en_us": "Is the child thirsty?"
            }
        }, 
        {
            "name": "skin_elasticity", 
            "image": "./img/pinch-abdomen.jpg", 
            "type": "select_one", 
            "param": "skin_elasticity", 
            "label": {
                "en_us": "Pinch the skin of the abdomen. Does it go back:"
            }
        }, 
        {
            "type": "goto_if", 
            "param": "skin_elastic", 
            "condition": "selected({{skin_elasticity}}, 'yes')"
        }, 
        {
            "type": "label", 
            "param": "breath"
        }, 
        {
            "type": "integer", 
            "name": "how_long_difficulty_breathing", 
            "param": null, 
            "label": {
                "en_us": "For how long?"
            }
        }, 
        {
            "type": "breath_counter", 
            "name": "count_breath", 
            "param": null, 
            "label": {
                "en_us": "Count the breaths in one minute"
            }
        }, 
        {
            "type": "select_one", 
            "name": "chest_indrawing", 
            "param": "present", 
            "label": {
                "en_us": "Look for Chest Indrawing"
            }
        }, 
        {
            "type": "label", 
            "param": "skin_elastic"
        }, 
        {
            "type": "select_one", 
            "name": "go_back", 
            "param": null, 
            "label": {
                "en_us": "Does it go back"
            }
        }
    ], 
