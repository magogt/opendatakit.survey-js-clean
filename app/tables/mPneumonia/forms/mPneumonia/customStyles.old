/*********** Vertical button settings ****************/
/* changes the width of ALL the vertical select buttons. You have to hard code the width for all of them. 
	Make sure that the width fits the largest button text you have */

	
.ui-controlgroup-vertical .ui-radio, .ui-controlgroup-vertical .ui-checkbox {
	width: 100%;
}

.odk-options-btn .ui-link, .odk-prev-btn, .odk-next-btn {
	background-color: #FFFFFF !important;
	color: #000000;
	font-size: 1.1em 
}
/********** BUTTON HEIGHT SETTINGS *****************/
/* Whenever you change 1 button height setting, make sure to adjust the other ones accordingly */

/* 	changes the height of ALL the select buttons. You have to hard code the height for all of them. 
	Leave as inherit to have them stay the same. */

.ui-controlgroup-vertical .ui-radio .ui-btn-inner, .ui-controlgroup-vertical .ui-checkbox .ui-btn-inner  {
	height: 150px;	
	border:1px solid #949494 !important;
	font-weight:bold;
}
/*
/* Changes the font size inside of the buttons */

.ui-controlgroup-vertical .ui-radio .ui-btn-text, .ui-controlgroup-vertical .ui-checkbox .ui-btn-text {
    font-size: 80x;
		color: #FFFFFF !important;	
}

/* changes the location of the text within the button. leave position as absolute. set height equal to the font size.
	top = (height of the button - font-size) / 2. Leave padding-top as inherit */


.ui-controlgroup-vertical .ui-radio .ui-btn-text, .ui-controlgroup-vertical .ui-checkbox .ui-btn-text {
	position: absolute;
	height: 150px;
	top: 70px;
	padding-top: inherit;

}

/***********************************************/
/******* End vertical button settings **********/


